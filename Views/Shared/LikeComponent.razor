@if (pressed)
{
    <i data-feather="thumbs-up"></i>
}
else
{
    <style type="text/css">
        .approved {
            color: green;
        }
      </style>
    <i data-feather="thumbs-up" class="approved"></i>

}   


@code {
    [Parameter]
    public int questionId { get; set; }
    [Parameter]
    public Boolean pressed { get; set; }


}