@if (pressed)
{
    <i data-feather="thumbs-up"></i>
}
else
{
    <style type="text/css">
        .grey {
            background-color: grey;
        }

        .approved {
            color: green;
        }

        .rejected {
            background-color: red;
        }

        .pending {
            background-color: lime;
        }
    </style>
    <i data-feather="circle" class="approved"></i>
}
@code {
    [Parameter]
    public int questionId { get; set; }
    [Parameter]
    public Boolean pressed { get; set; }
}