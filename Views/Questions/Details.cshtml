@model OrtResponde.Models.Question

@{
    ViewData["Title"] = "Details";
}



    <div>
        <h4>@Html.DisplayFor(model => model.Descripcion)</h4>
        <span class="badge">
            <i data-feather="thumbs-up"></i> @Html.DisplayFor(model => model.Likes)
            <i data-feather="thumbs-down"></i> @Html.DisplayFor(model => model.Dislikes)
        </span>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.Label("Respuestas")
                </dt>
                <dd class="col-sm-10">
                    <ul>
                        @foreach (var item in Model.Answers)
                        {
                            <li>
                                @Html.DisplayFor(modelItem => item.Respuesta)
                            </li>

                        }
                    </ul>
                </dd>
            </dl>
    </div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" asp-controller="Home">Volver</a>
</div>
