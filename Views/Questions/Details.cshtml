@model OrtResponde.Models.Question

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Likes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Likes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dislikes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dislikes)
        </dd>
        <dt class="col-sm-2">
            @Html.Label("Respuestas")
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.Answers) { 
                <li>
                    @Html.DisplayFor(modelItem => item.Respuesta)
                </li>
                    
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
