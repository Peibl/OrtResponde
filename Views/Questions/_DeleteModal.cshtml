@model OrtResponde.Models.Question

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Borrar Pregunta</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <label>Esta seguro que desea borrar la pregunta?</label>                
            </div>
            <div>
                <label>@Html.DisplayFor(modelItem => Model.Descripcion)</label>
            </div>
            <div class="modal-footer">
                <a class="btn btn-danger"
                    asp-action="Delete"
                    asp-controller="Questions"
                    asp-route-Id="@Model.Id"
                    method="post">Borrar</a>
                <input type="button" value="Cancelar" class="btn btn-primary" data-dismiss="modal" />
            </div>
        </div>
    </div>
</div>
